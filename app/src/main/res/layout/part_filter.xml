            app:filtered="@={params.lightSynthetic}"/>

        <ru.dmisb.photon.ui.custom_view.FilterTextView
            android:id="@+id/filter_light_mixed"
            style="@style/FilterIco"
            android:drawableTop="@drawable/ic_light_mixed"
            android:text="@string/filter_light_mixed"
            app:filtered="@={params.lightMixed}"/>

        <TextView
            style="@style/FilterHeader"
            android:text="@string/filter_light_direction"/>

        <ru.dmisb.photon.ui.custom_view.FilterTextView
            android:id="@+id/filter_light_dir_front"
            style="@style/FilterIco"
            android:drawableTop="@drawable/ic_light_dir_front"
            android:text="@string/filter_light_dir_front"
            app:filtered="@={params.lightDirDirect}"/>

        <ru.dmisb.photon.ui.custom_view.FilterTextView
            android:id="@+id/filter_light_dir_back"
            style="@style/FilterIco"
            android:drawableTop="@drawable/ic_light_dir_back"
            android:text="@string/filter_light_dir_back"
            app:filtered="@={params.lightDirBack}"/>

        <ru.dmisb.photon.ui.custom_view.FilterTextView
            android:id="@+id/filter_light_dir_side"
            style="@style/FilterIco"
            android:drawableTop="@drawable/ic_light_dir_side"
            android:text="@string/filter_light_dir_side"
            app:filtered="@={params.lightDirSide}"/>

        <ru.dmisb.photon.ui.custom_view.FilterTextView
            android:id="@+id/filter_light_dir_mixed"
            style="@style/FilterIco"
            android:drawableTop="@drawable/ic_light_dir_mixed"
            android:text="@string/filter_light_dir_mixed"
            app:filtered="@={params.lightDirMixed}"/>

        <TextView
            style="@style/FilterHeader"
            android:text="@string/filter_light_count"/>

        <ru.dmisb.photon.ui.custom_view.FilterTextView
            android:id="@+id/filter_light_count_1"
            style="@style/FilterIco"
            android:drawableTop="@drawable/ic_light_count_1"
            android:text="@string/filter_light_count_1"
            app:filtered="@={params.lightCount1}"/>

        <ru.dmisb.photon.ui.custom_view.FilterTextView
            android:id="@+id/filter_light_count_2"
            style="@style/FilterIco"
            android:drawableTop="@drawable/ic_light_count_2"
            android:text="@string/filter_light_count_2"
            app:filtered="@={params.lightCount2}"/>

        <ru.dmisb.photon.ui.custom_view.FilterTextView
            android:id="@+id/filter_light_count_3"
            style="@style/FilterIco"
            android:drawableTop="@drawable/ic_light_count_3"
            android:text="@string/filter_light_count_3"
            app:filtered="@={params.lightCount3}"/>

    </com.google.android.flexbox.FlexboxLayout>
</layout>

